{
    "image": "mcr.microsoft.com/devcontainers/python:3.13",

    "features": {
        "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
        "ghcr.io/jsburckhardt/devcontainer-features/ruff:1": {},
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "anthropic.claude-code"
            ]
        }
    },

    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.claude,target=/home/vscode/.claude,type=bind"
    ],

    "remoteUser": "vscode",

    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y rubberband-cli libsndfile1 ffmpeg && npm install -g @anthropic-ai/claude-code && uv sync --group dev",

    "postAttachCommand": "mkdir -p ~/.ssh && chmod 700 ~/.ssh && find ~/.ssh -maxdepth 1 -type f -exec chmod 600 {} + 2>/dev/null || true"
}
